      </p>
    </div>
    <div class="d-inline-flex align-items-center mx-5">
      {
        ListIconSocialNetwork.map((item) => (
          <div class="p-2">
            <a title={item.title} href={item.url} target="_blank">
              <i class:list={["bi", item.nameSvg]} />
            </a>
          </div>
        ))
      }
    </div>

    <div
      class="d-flex flex-column flex-md-row justify-content-around align-items-center py-3"
    >
      <div
        class="d-flex flex-sm-column flex-md-row justify-content-center align-items-center flex-grow-1"
      >
