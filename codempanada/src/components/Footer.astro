---
interface SocialNetwork {
  title: string;
  url: string;
  nameSvg: string;
}

const ListIconSocialNetwork: Readonly<SocialNetwork[]> = Object.freeze([
  {
    title: "LinkedIn",
    nameSvg: "bi-linkedin",
    url: "https://www.linkedin.com/in/eli-ezer-ramirez/",
  },
  {
    title: "Gmail",
    nameSvg: "bi-mailbox",
    url: `mailto:ramirez.ruiz.eliezer.reuven@gmail.com`,
  },
  {
    title: "Github",
    nameSvg: "bi-github",
    url: "https://github.com/EliezerRamirezRuiz",
  },
  { title: "Twitter", nameSvg: "bi-twitter-x", url: "/" },
  { title: "Reddit", nameSvg: "bi-reddit", url: "/" },
]);

interface ILink {
  name: string;
  url: string;
}

const FooterLink: Readonly<ILink[]> = Object.freeze([
  { name: "Home", url: "/" },
  { name: "Hero", url: "#hero" },
  { name: "Mision", url: "#our-mision" },
  { name: "Vision", url: "#our-vision" },
  { name: "Values", url: "#our-values" },
  { name: "Projects", url: "#projects" },
]);
---

<footer class="mt-3">
  <div class="d-flex flex-column mx-auto" id="container-footer">
    <div class="d-flex flex-column justify-content-center align-items-center">
      <h5 class="display-5 text-center">Â¿Why contribute to open source?</h5>
      <p class="text-wrap w-75">
